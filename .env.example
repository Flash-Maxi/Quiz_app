# Flask Quiz App Configuration
# Copy this file to .env and update the values

# Secret key for session management (REQUIRED)
# Generate a new one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here

# Debug mode (True for development, False for production)
FLASK_DEBUG=True

# Maximum questions per quiz session
MAX_QUESTIONS_PER_QUIZ=10

# Server configuration
HOST=127.0.0.1
PORT=5000

# Database URL (for future database implementation)
# DATABASE_URL=sqlite:///quiz.db